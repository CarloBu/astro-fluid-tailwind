---
import "../styles/fonts.css";
import "../styles/global.css";
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title?: string;
}

const { title = "Fluid Design System" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<preload href="/fonts/Roboto-Light.ttf" as="font" type="font/ttf" crossorigin="anonymous">
		<preload href="/fonts/Roboto-LightItalic.ttf" as="font" type="font/ttf" crossorigin="anonymous">
		<preload href="/fonts/Roboto-Regular.ttf" as="font" type="font/ttf" crossorigin="anonymous">
		<preload href="/fonts/Roboto-Medium.ttf" as="font" type="font/ttf" crossorigin="anonymous">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="min-h-screen flex flex-col bg-theme-bg text-theme-fg">
		<Header />
		<slot />
		<Footer />
	</body>
</html>
