---
/**
 * WORK SECTION
 * Project showcase using fluid design system.
 */

const projects = [
  {
    title: "Flint Group",
    stat: "$50M loans closed instead of $3M",
    fullWidth: true,
  },
  {
    title: "Terrascope",
    stat: "$20M In Generated Revenue",
    fullWidth: false,
  },
  {
    title: "Siera Group",
    stat: "92% Time Saved in Filtering Data",
    fullWidth: false,
  },
];
---

<!-- ========================================
     WORK - Project showcase
     ======================================== -->
<section id="work" class="py-fluid-24 bg-theme-bg">
	<div class="px-fluid-8">
		<div class="grid grid-cols-1 lg:grid-cols-2 gap-fluid-8">
			{projects.map((project) => (
				<a
          href="#"
          class:list={[
            "group relative flex flex-col justify-end overflow-hidden rounded-theme-lg p-fluid-8",
            project.fullWidth ? "aspect-1344/832 lg:col-span-2" : "aspect-656/832 lg:col-span-1"
          ]}
        >
          <!-- Background Placeholder -->
          <div class="absolute inset-0 z-0 bg-linear-to-br from-theme-bg-muted to-theme-bg-subtle group-hover:scale-105 transition-transform duration-700 ease-out">
            <div class="absolute inset-0 flex items-center justify-center opacity-10">
              <span class="text-fluid-display font-bold">WORK</span>
            </div>
          </div>

          <!-- Gradient Overlay -->
          <div class="absolute inset-0 z-10 bg-black/20 pointer-events-none"></div>

          <!-- Content -->
          <div class="relative z-20 flex flex-col sm:flex-row sm:flex-wrap sm:items-end sm:justify-between gap-fluid-6 w-full">
            <h3 class="text-fluid-title-sm font-medium text-white shrink-0">
              {project.title}
            </h3>

            <!-- Stats Badge -->
            <div class="flex items-center gap-fluid-4 sm:gap-fluid-6 bg-gray-900/90 backdrop-blur-sm p-fluid-4 rounded-theme-md border border-white/10 max-w-sm">
              <div class="w-12 h-12 sm:w-[119px] sm:h-[111px] bg-white/10 rounded-theme-sm shrink-0 flex items-center justify-center">
                <div class="w-4 h-4 bg-white/20 rounded-full"></div>
              </div>
              <p class="text-fluid-body-lg text-white leading-snug">
                {project.stat}
              </p>
            </div>
          </div>
				</a>
			))}
		</div>
	</div>
</section>
