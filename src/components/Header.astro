<style>
	.nav-pill-link {
		display: flex;
		align-items: center;
		justify-content: center;
		height: 3rem; /* 48px */
		padding: 0 var(--spacing-fluid-8);
		border-radius: var(--radius-theme-pill);
		font-size: 1rem;
		font-weight: 700;
		color: var(--color-nav-bg);
		transition: color 0.3s ease;
		white-space: nowrap;
		position: relative;
		z-index: 10;
		background: transparent !important;
	}

	.nav-pill-link.active {
		color: var(--color-white);
	}

	/* When hovering the container, the active link should revert to black */
	#nav-desktop-container:hover .nav-pill-link.active {
		color: var(--color-nav-bg);
	}

	/* The link being hovered (where the pill is) must always be white */
	.nav-pill-link:global(.is-hovered) {
		color: var(--color-white) !important;
	}

	#nav-pill {
		top: 4px;
		left: 0;
		pointer-events: none;
		background-color: var(--color-nav-bg);
	}

	/* Mobile Menu */
	.mobile-menu {
		position: fixed;
		inset: 0;
		z-index: 40;
		background-color: var(--color-theme-bg);
		opacity: 0;
		visibility: hidden;
		transition: all 0.6s cubic-bezier(0.19, 1, 0.22, 1);
		display: flex;
		align-items: center;
	}

	.mobile-menu:global(.is-open) {
		opacity: 1;
		visibility: visible;
	}

	.mobile-menu-inner {
		width: 100%;
		max-width: 1440px;
		margin: 0 auto;
		padding: 6rem var(--spacing-fluid-8) 2rem;
		display: flex;
		flex-direction: column;
		height: 100%;
	}

	.mobile-menu-nav {
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
		align-items: flex-end;
	}

	.mobile-menu-link {
		position: relative;
		display: inline-flex;
		align-items: center;
		padding: 0.5rem 0;
		opacity: 0;
		transform: translateY(20px);
		transition: all 0.6s cubic-bezier(0.19, 1, 0.22, 1);
		text-align: right;
	}

	.mobile-menu:global(.is-open) .mobile-menu-link {
		opacity: 1;
		transform: translateY(0);
	}

	.mobile-menu-link-text {
		font-size: clamp(2.5rem, 2rem + 5vw, 6rem);
		font-weight: 700;
		line-height: 1;
		text-transform: uppercase;
		color: var(--color-theme-fg);
		letter-spacing: -0.02em;
	}

	/* Staggered animation */
	.mobile-menu:global(.is-open) .mobile-menu-link:nth-child(1) { transition-delay: 0.1s; }
	.mobile-menu:global(.is-open) .mobile-menu-link:nth-child(2) { transition-delay: 0.15s; }
	.mobile-menu:global(.is-open) .mobile-menu-link:nth-child(3) { transition-delay: 0.2s; }
	.mobile-menu:global(.is-open) .mobile-menu-link:nth-child(4) { transition-delay: 0.25s; }
	.mobile-menu:global(.is-open) .mobile-menu-link:nth-child(5) { transition-delay: 0.3s; }
	.mobile-menu:global(.is-open) .mobile-menu-link:nth-child(6) { transition-delay: 0.35s; }
</style>

<script>
	import { gsap } from 'gsap';

	// Mobile Menu logic
	const menuToggle = document.getElementById('menu-toggle');
	const menuToggleText = document.getElementById('menu-toggle-text');
	const mobileMenu = document.getElementById('mobile-menu');
	const mobileLinks = document.querySelectorAll('[data-menu-link]');
	const body = document.body;

	let isMenuOpen = false;

	function toggleMenu() {
		isMenuOpen = !isMenuOpen;
		menuToggle?.classList.toggle('is-open', isMenuOpen);
		mobileMenu?.classList.toggle('is-open', isMenuOpen);
		
		if (menuToggleText) {
			menuToggleText.textContent = isMenuOpen ? 'Close' : 'Menu';
		}
		
		body.style.overflow = isMenuOpen ? 'hidden' : '';
	}

	function closeMenu() {
		if (isMenuOpen) {
			isMenuOpen = false;
			mobileMenu?.classList.remove('is-open');
			if (menuToggleText) menuToggleText.textContent = 'Menu';
			body.style.overflow = '';
		}
	}

	menuToggle?.addEventListener('click', toggleMenu);
	mobileLinks.forEach(link => {
		link.addEventListener('click', () => setTimeout(closeMenu, 100));
	});

	// Desktop GSAP Nav Pill logic
	const navContainer = document.getElementById('nav-desktop-container');
	const navPill = document.getElementById('nav-pill');
	const navLinks = document.querySelectorAll('[data-nav-item]');
	const activeLink = document.querySelector('.nav-pill-link.active') as HTMLElement;

	if (navPill && navLinks.length > 0) {
		const initPill = () => {
			if (activeLink && window.innerWidth >= 1024) {
				gsap.set(navPill, {
					x: activeLink.offsetLeft,
					width: activeLink.offsetWidth,
					opacity: 1
				});
			} else {
				gsap.set(navPill, { opacity: 0 });
			}
		};

		initPill();

		navLinks.forEach(link => {
			const item = link as HTMLElement;
			item.addEventListener('mouseenter', () => {
				if (window.innerWidth < 1024) return;
				navLinks.forEach(l => l.classList.remove('is-hovered'));
				item.classList.add('is-hovered');

				gsap.to(navPill, {
					x: item.offsetLeft,
					width: item.offsetWidth,
					duration: 0.4,
					ease: "power3.out",
					opacity: 1
				});
			});
		});

		navContainer?.addEventListener('mouseleave', () => {
			if (window.innerWidth < 1024) return;
			navLinks.forEach(l => l.classList.remove('is-hovered'));
			
			if (activeLink) {
				gsap.to(navPill, {
					x: activeLink.offsetLeft,
					width: activeLink.offsetWidth,
					duration: 0.4,
					ease: "power3.out"
				});
			}
		});

		window.addEventListener('resize', initPill);
	}

	// Global close handlers
	document.addEventListener('keydown', (e) => {
		if (e.key === 'Escape' && isMenuOpen) closeMenu();
	});

	window.matchMedia('(min-width: 1024px)').addEventListener('change', (e) => {
		if (e.matches && isMenuOpen) closeMenu();
	});
</script>